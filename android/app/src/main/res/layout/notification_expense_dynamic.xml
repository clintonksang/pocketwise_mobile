<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/notification_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/notification_merchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/category_button_1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/category_button_2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/category_button_3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/custom_category_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Custom Category"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />
</LinearLayout> 